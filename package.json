{
  "name": "require-maybe",
  "description": "Optionally require a module, maybe fallback to others.",
  "version": "1.0.0",
  "author":
    "Andreas Pizsa <hopster@gmail.com> (https://github.com/AndreasPizsa)",
  "bugs": {
    "url": "https://github.com/AndreasPizsa/require-maybe/issues",
    "email": "hopster@gmail.com"
  },
  "contributors": [
    "Andreas Pizsa <hopster@gmail.com> (https://github.com/AndreasPizsa)"
  ],
  "dependencies": {
    "callsite": "^1.0.0"
  },
  "ava": {
    "failFast": true,
    "verbose": true
  },
  "devDependencies": {
    "@andreaspizsa/true": "^1.0.0",
    "ava": "^0.25.0",
    "codecov": "^3.1.0",
    "cross-env": "^5.0.5",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.4",
    "lint-staged": "^8.0.5",
    "nyc": "^13.1.0",
    "prettier": "^1.6.1",
    "remark-cli": "^6.0.1",
    "remark-preset-github": "^0.0.13",
    "xo": "^0.23.0"
  },
  "engines": {
    "node": ">=8.3"
  },
  "homepage": "https://github.com/AndreasPizsa/require-maybe",
  "keywords": ["require", "optional", "module"],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx,css,less,scss,json,graphql}": [
      "prettier --write --single-quote --trailing-comma none --no-semi",
      "git add"
    ],
    "*.md": ["remark . -qfo", "git add"]
  },
  "main": "index.js",
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100,
    "reporter": ["lcov", "html", "text"]
  },
  "remarkConfig": {
    "plugins": ["preset-github"]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AndreasPizsa/require-maybe"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo",
    "precommit": "lint-staged && npm test",
    "test": "npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava"
  },
  "xo": {
    "extends": "prettier",
    "plugins": ["prettier"],
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "none",
          "semi": false
        }
      ],
      "max-len": [
        "error",
        {
          "code": 80,
          "ignoreUrls": true
        }
      ],
      "capitalized-comments": "off",
      "camelcase": "off",
      "no-warning-comments": "off"
    },
    "space": true
  }
}
